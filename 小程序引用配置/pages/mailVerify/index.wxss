

@import "../../style/reset.wxss";
/**index.wxss**/
.login_head{
	height:340rpx;
	text-align:center;
	background:#0096e0;	
}
.login_logo{
	width:166rpx;
	height:102rpx;
	margin-top:60rpx;
}
.login_main{
	margin:0 40rpx;
	border-radius:10rpx;
	-webkit-border-radius:10rpx;
	background:#fff;
	padding:40rpx 0rpx 0rpx;
	position:relative;
	top:-110rpx;
}
.mailVerify_main_a{
	margin:0 40rpx;
	border-radius:10rpx;
	-webkit-border-radius:10rpx;
	background:#fff;
	position:relative;
	top:-70rpx;
}

.filluser_logo{
	position:absolute;
	z-index:1001;
	top:-170rpx;
	width:190rpx;
	height:190rpx;
	display:inline-block;
	text-align:center;
	left:50%;
	margin-left:-95rpx;
}
.filluser_logo_img{
	margin-top:60rpx;
	width:157rpx;
	height:153rpx;
}
.login_btn{
	border-radius:	49rpx;
	-webkit-border-radius:	49rpx;
	background:#0096e0;
	font-size:32rpx;
	margin:0 40rpx;
	color:#fff;
	text-align:center;
	line-height:98rpx;
}
.mailVerify_head_a{
	text-align:center;
	margin:36rpx 0 20rpx;
	font-size:36rpx;
	line-height:36rpx;
	color:#333;
	font-weight:bold;
}
.mailVerify_head_b{
	text-align:center;
	font-size:28rpx;
	line-height:48rpx;
	color:#003333;
}
.mailVerify_head_c{
	text-align:center;
	font-size:28rpx;
	line-height:48rpx;
	color:#666;
}
.mailVerify_head_c_bottom{
	padding-bottom:20rpx;
}
.mailVerify_head_d{
	border-top:1rpx solid #f2f2f2;
	padding:20rpx;
	text-align:center;
	font-size:28rpx;
	line-height:36rpx;
	color:#666;
}
.mailVerify_head_d_again{
	color:#0096e0;
}
.mailVerify_cont_title{
	text-align:center;
	font-size:30rpx;
	line-height:36rpx;
	color:#333;
	padding:40rpx;
}
.mailVerify_content{
	padding:0 60rpx 20rpx;
}
.mailVerify_content_item{
	text-align:left;
	font-size:28rpx;
	line-height:48rpx;
	color:#666;
}

.mailVerify_cont_send{
	border-top:1rpx solid #f2f2f2;

	padding:20rpx 0;
	text-align:center;
	font-size:28rpx;
	line-height:36rpx;
	color:#0096e0;
}
.mailVerify_footer{
	position:absolute;
	left:0;
	bottom:20rpx;
	width:100%;
}