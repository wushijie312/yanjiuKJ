<!--index.wxml-->
<view class='home_box'>
	<view class="bg_a"></view>
	<view class="login_head">
		
	</view>
	<view class="login_main">
		<view class="filluser_logo">
			<image class="{{src?'filluser_logo_head':'filluser_logo_img' }}" src="{{src?src:'http://static.98ep.com/Img/yiXinCard/login_logo.png'}}" ></image>
		</view>
		<view class='filluser_btn_a' bindtap="uploadImgTap">点击设置头像</view>
	</view>
	<view class="filluser_main_a">
		<view class="login_cont ">
			<view class="login_cont_a clearfix">
				<label class="login_label_name fl">姓名</label><input class="login_input fl" placeholder="请输入您的姓名" />
			</view>
			<view class="login_cont_a clearfix">
				<label class="login_label_name fl">部门</label><input class="login_input fl" placeholder="请输您的部门" />
			</view>

		</view>
	</view>
	<view class='login_btn' bindtap="fillUserTap">预览</view>

</view>
